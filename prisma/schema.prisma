// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
// Important to use cloudflare to storage video and image archives at cloud with no fees by download. It uses the same service "s3" from Amazon s3

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id            String   @id @default(uuid())
  name          String
  path          String
  transcription String?
  createdAt     DateTime @default(now())
}

model Prompt {
  id       String @id @default(uuid())
  title    String
  template String
}
